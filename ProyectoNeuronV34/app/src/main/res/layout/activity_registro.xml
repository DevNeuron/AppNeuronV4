<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Registro">

  <EditText
      android:id="@+id/etEmail2"
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:layout_marginTop="15dp"
      android:ems="10"
      android:hint="Repita el Email"
      android:inputType="textPersonName"
      android:textColor="#000000"
      android:textColorHint="#000000"
      app:layout_constraintStart_toStartOf="@+id/etEmail"
      app:layout_constraintTop_toBottomOf="@+id/etEmail" />

  <EditText
      android:id="@+id/etApellidos"
      android:layout_width="204dp"
      android:layout_height="40dp"
      android:layout_marginTop="15dp"
      android:ems="10"
      android:hint="Introduzca sus apellidos"
      android:inputType="textPersonName"
      android:textColor="#000000"
      android:textColorHint="#000000"
      app:layout_constraintStart_toStartOf="@+id/etNombre"
      app:layout_constraintTop_toBottomOf="@+id/etNombre" />

  <EditText
      android:id="@+id/etEmail"
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:layout_marginTop="15dp"
      android:ems="10"
      android:hint="Introduzca  un Email "
      android:inputType="textPersonName"
      android:textColor="#000000"
      android:textColorHint="#000000"
      app:layout_constraintStart_toStartOf="@+id/editTextNumber"
      app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

  <EditText
      android:id="@+id/etContra"
      android:layout_width="204dp"
      android:layout_height="40dp"
      android:layout_marginTop="12dp"
      android:ems="10"
      android:hint="Introduzca la contraseña"
      android:inputType="textPersonName"
      android:textColor="#000000"
      android:textColorHint="#000000"
      app:layout_constraintStart_toStartOf="@+id/etEmail2"
      app:layout_constraintTop_toBottomOf="@+id/etEmail2" />

  <EditText
      android:id="@+id/etContra2"
      android:layout_width="204dp"
      android:layout_height="40dp"
      android:layout_marginTop="16dp"
      android:ems="10"
      android:hint="Repita la contraseña"
      android:inputType="textPersonName"
      android:textColor="#000000"
      android:textColorHint="#000000"
      app:layout_constraintStart_toStartOf="@+id/etContra"
      app:layout_constraintTop_toBottomOf="@+id/etContra" />

  <EditText
      android:id="@+id/etNombre"
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:layout_marginTop="20dp"
      android:ems="10"
      android:hint="Introduzca su nombre "
      android:inputType="textPersonName"
      android:textColor="#000000"
      android:textColorHint="#000000"
      app:layout_constraintStart_toStartOf="@+id/textView3"
      app:layout_constraintTop_toBottomOf="@+id/textView3" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:layout_marginTop="50dp"
      android:text="Rellene los campos:"
      android:textColor="#000000"
      android:textSize="18sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/editTextNumber"
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:layout_marginTop="15dp"
      android:ems="10"
      android:hint="Introduzca su edad"
      android:inputType="number"
      android:textColor="#000000"
      android:textColorHint="#000000"
      app:layout_constraintStart_toStartOf="@+id/etApellidos"
      app:layout_constraintTop_toBottomOf="@+id/etApellidos" />

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="317dp"
      android:layout_height="93dp"
      app:srcCompat="@drawable/logowhite"
      tools:layout_editor_absoluteX="40dp"
      tools:layout_editor_absoluteY="591dp" />

  <TextView
      android:id="@+id/tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#FF0000"
      app:layout_constraintTop_toBottomOf="@+id/etContra2"
      tools:layout_editor_absoluteX="30dp" />

  <Button
      android:id="@+id/button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      tools:layout_editor_absoluteY="503dp" />

</androidx.constraintlayout.widget.ConstraintLayout>