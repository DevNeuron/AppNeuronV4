      android:textColor="#000000"
      android:textSize="18sp"
      app:layout_constraintStart_toStartOf="parent"
      tools:layout_editor_absoluteY="104dp" />

  <EditText
      android:id="@+id/etCaso"
      android:layout_width="359dp"
      android:layout_height="498dp"
